# Directories
PAPERS_DIR=./papers
VECTORSTORE_DIR=./vectorstore
INGEST_RECORD=./vectorstore/ingested.json

# Chunking
CHUNK_SIZE=1200
CHUNK_OVERLAP=120

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=llama3.1:8b

# Retrieval
TOP_K_CANDIDATES=50
TOP_K=4
BM25_WEIGHT=0.3
DENSE_WEIGHT=0.7

# Reranking
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Session management
SESSION_TTL_SECONDS=3600

# CORS (comma-separated origins, * for all)
CORS_ORIGINS=*

# Parent document retrieval (experimental)
ENABLE_PARENT_RETRIEVAL=false
CHILD_CHUNK_SIZE=400
CHILD_CHUNK_OVERLAP=50

# Optional S3 sync for ingestion (downloads files modified in the lookback window)
ENABLE_S3_INGEST=false
S3_BUCKET=
S3_PREFIX=
S3_REGION=
S3_LOOKBACK_HOURS=3
